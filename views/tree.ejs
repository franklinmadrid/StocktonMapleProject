<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= `${treeID}'s sap entries`%></title>
    <link rel="stylesheet" href="/bootstrap.min.css">
    <script type="text/javascript" language="javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.24/css/jquery.dataTables.min.css">

    <script type="text/javascript" class="init">
        $(document).ready(function() {
            $('#sapTable').DataTable( {
                autoWidth: false,
                lengthChange: false,
                ordering: false,
                pageLength: 10,
                columnDefs: [
                    {className: "dt-head-center", targets: "_all"}
                ]
            } );
        } );
    </script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #ff8c00;">
        <b class="navbar-brand"><%=`${treeID}'s sap entries`%></b>
        <div id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" style="color: white; opacity: 0.9; margin-right: 10px" href="<%= `${treeID}/registerHarvest` %>">Register Sap Harvest</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color: white; opacity: 0.9; margin-right: 10px" href="<%= `${treeID}/endTreeSeason` %>">End Tree Season</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color: white; opacity: 0.9; margin-right: 10px" href="<%= link %>">Back To Profile</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container" style="margin-top: 30px">
        <table id="sapTable" class="display center">
            <thead>
                <tr>
                    <th>Sap Volume (Gallons)</th>
                    <th>Harvest Temp (Fahrenheit)</th>
                    <th>Harvest Date</th>
                </tr>
            </thead>
            <tbody style="text-align:center">
            </tbody>
        </table>
    </div>

<script>
    let initData = JSON.parse('<%-JSON.stringify(saps)%>');
    if(initData){
        initData.forEach(e =>{
            $('#sapTable > tbody').append("<tr></tr>");
            $("#sapTable > tbody > :last").append("<td>"+ e.sapVolume +"</td>");
            $("#sapTable > tbody > :last").append("<td>"+ e.harvestTemp +"</td>");
            $("#sapTable > tbody > :last").append("<td>"+ e.harvestDate.substring(0,10) +"</td>");
        })
    }
</script>
</body>
</html>